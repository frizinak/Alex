RewriteBase /
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

#both (bad seo)
RewriteRule ^((en|nl|fr)(/|$))?(.*)$ index.php?cmx-lang=$2&page=$4 [L,QSA,NC]

